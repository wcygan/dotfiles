command = /Users/wcygan/.nix-profile/bin/fish

# Shell Integration
# ssh-terminfo: auto-copy terminfo to remote servers on first SSH
# ssh-env: fallback to xterm-256color on servers without Ghostty terminfo (OpenSSH 8.7+)
# sudo: preserve TERM environment when using sudo
shell-integration-features = ssh-terminfo,ssh-env,sudo

# Visuals
theme = Idle Toes
font-size = 22
unfocused-split-opacity = 1.0
window-inherit-font-size = false
cursor-style-blink = false
keybind = shift+enter=text:\n

# Copy text to clipboard when highlighting:
copy-on-select = clipboard

# Ensure to start in ~/ (home directory)
working-directory = home

# Add / delete terminal tabs
keybind = super+shift+t=new_tab
keybind = super+shift+w=close_surface

# Switch between terminal tabs
keybind = cmd+alt+right=next_tab
keybind = cmd+alt+left=previous_tab

# Reload the config
keybind = super+shift+r=reload_config
