[
  {
    "context": "Workspace",
    "bindings": {
      "alt-tab": "workspace::ToggleBottomDock",                     // ðŸ’» Terminal (Mac: Option-Tab)
      "cmd-1": "workspace::ToggleLeftSidebar",                      // ðŸ—ƒï¸ Files 
      "cmd-2": "workspace::ToggleRightDock",                        // ðŸ¤– AI Context 
      "cmd-shift-a": "command_palette::Toggle",
      "cmd-alt-o": "project_symbols::Toggle",
      "cmd-6": "diagnostics::Deploy",
      "alt-f12": "dock::FocusDock"
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "cmd-k": "assistant::InlineAssist",                            // ðŸ¤– Inline Assist 
      "cmd-f12": "outline::Toggle",
      "cmd-7": "outline::Toggle",
      "cmd-shift-o": "file_finder::Toggle",
      "cmd-l": "go_to_line::Toggle",
    }
  },
  {
    "bindings": {
      "cmd-.": "zed::OpenKeymap",                                   // ðŸŽ¹ KeyMap (this file) 
      "cmd-alt-.": "zed::OpenDefaultKeymap",                        // ðŸŽ¹ DEFAULT KeyMap
      "cmd-,": "zed::OpenSettings",                                 // âš™ï¸ Settings 
      "cmd-alt-,": "zed::OpenDefaultSettings",                      // âš™ï¸ DEFAULT Settings 
      "cmd-shift-[": "pane::ActivatePrevItem",
      "cmd-shift-]": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl->": "zed::IncreaseBufferFontSize",
      "ctrl-<": "zed::DecreaseBufferFontSize",
      "cmd-d": "editor::DuplicateLine",
      "cmd-pagedown": "editor::MovePageDown",
      "cmd-pageup": "editor::MovePageUp",
      "ctrl-alt-shift-b": "editor::SelectToPreviousWordStart",
      "shift-enter": "editor::NewlineBelow",
      "cmd--": "editor::Fold",
      "cmd-=": "editor::UnfoldLines",
      "alt-shift-g": "editor::SplitSelectionIntoLines",
      "ctrl-g": [
        "editor::SelectNext",
